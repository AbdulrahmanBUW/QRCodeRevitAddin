<Window x:Class="QRCodeRevitAddin.Views.QrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="QR Code Generator - DEAXO GmbH" 
        Height="633" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B7AB5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E6294"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                    <Setter Property="Cursor" Value="No"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#5B9BD5"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A8AC4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#3B7AB5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,3"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2E6294"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="0,3"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#3B7AB5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   FontWeight="Bold" 
                                   FontSize="13"
                                   Foreground="#3B7AB5"
                                   Margin="5,0"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="QR Code Generator for Sheets" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#3B7AB5"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Generate QR codes from manual input or sheet data" 
                       FontSize="11" 
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       Margin="0,3,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Document Information" Margin="0,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <Label Content="Drawing Number:"/>
                            <TextBox Text="{Binding DocumentInfo.Name, UpdateSourceTrigger=PropertyChanged}" 
                                     ToolTip="Enter drawing number"/>

                            <Label Content="Sheet Name:" Margin="0,10,0,0"/>
                            <TextBox Text="{Binding DocumentInfo.Revision, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="Enter sheet name"/>

                            <Label Content="Revision:" Margin="0,10,0,0"/>
                            <TextBox Text="{Binding DocumentInfo.Project, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="Enter revision"/>

                            <Label Content="Issue Date (DD/MM/YY):" Margin="0,10,0,0"/>
                            <TextBox Text="{Binding DocumentInfo.Date, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="Enter date in DD.MM.YYYY format (e.g., 04.12.2025)"/>

                            <Label Content="Checked By:" Margin="0,10,0,0"/>
                            <TextBox Text="{Binding DocumentInfo.CheckedBy, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="Enter checker name"/>
                        </StackPanel>
                    </ScrollViewer>

                    <Button Grid.Row="1"
                            Content="ðŸ“‹ Use Sheet Data" 
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding UseSheetDataCommand}"
                            IsEnabled="{Binding CanUseSheetData}"
                            ToolTip="Automatically fill fields from the currently selected sheet"
                            Margin="0,15,0,0"/>
                </Grid>
            </GroupBox>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <GroupBox Header="QR Code Preview" Height="410" VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="White" 
                                BorderBrush="#3B7AB5" 
                                BorderThickness="2"
                                CornerRadius="4"
                                Margin="0,0,0,10">
                            <Viewbox Stretch="Uniform" Margin="15">
                                <Image Source="{Binding QrPreviewImage}" 
                                       Width="300" 
                                       Height="300"
                                       Stretch="Uniform"/>
                            </Viewbox>
                        </Border>

                        <ScrollViewer Grid.Row="1" 
                                      MaxHeight="80" 
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <TextBlock Text="{Binding DocumentInfo.CombinedText}"
                                       TextWrapping="Wrap"
                                       FontSize="9"
                                       FontFamily="Consolas"
                                       Foreground="#666666"
                                       Padding="5"
                                       Background="#F9F9F9"/>
                        </ScrollViewer>
                    </Grid>
                </GroupBox>

                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <Button Content="ðŸ”¨ Generate QR Code" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding GenerateQrCommand}"
                            ToolTip="Generate QR code from the fields above"
                            Height="38"/>

                    <Separator Margin="0,10" Background="#CCCCCC"/>

                    <UniformGrid Columns="2">
                        <Button Content="ðŸ’¾ Save" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding SaveQrCommand}"
                                IsEnabled="{Binding CanSave}"
                                ToolTip="Save QR code as PNG file"/>

                        <Button Content="ðŸ–¼ï¸ Viewer" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding OpenInViewerCommand}"
                                IsEnabled="{Binding CanSave}"
                                ToolTip="Open QR code in external image viewer"/>
                    </UniformGrid>

                    <Button Content="ðŸ“ Insert into Sheet" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding InsertQrCommand}"
                            IsEnabled="{Binding CanInsert}"
                            ToolTip="Insert QR code into the active sheet"
                            Height="38"
                            Margin="5,8,5,5"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Border Grid.Row="2" 
                Background="#3B7AB5" 
                Padding="8,5" 
                Margin="-15,10,-15,-15"
                CornerRadius="0,0,4,4">
            <TextBlock Text="DEAXO GmbH Â© 2025 | QR Code Generator v1.0" 
                       Foreground="White" 
                       FontSize="10"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
